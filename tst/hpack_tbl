. "$(dirname "$0")"/common.sh

_ --------------------------------------
_ Section 6.3. Dynamic Table Size Update
_ --------------------------------------

mk_hex <<EOF
# C.5.1.  First Response
4803 3330 3258 0770 7269 7661 7465 611d | H.302X.privatea.
4d6f 6e2c 2032 3120 4f63 7420 3230 3133 | Mon, 21 Oct 2013
2032 303a 3133 3a32 3120 474d 546e 1768 |  20:13:21 GMTn.h
7474 7073 3a2f 2f77 7777 2e65 7861 6d70 | ttps://www.examp
6c65 2e63 6f6d                          | le.com

# Update the table limit to 150
# 001 11111 -> 001 (table update) and 31 (5-bit prefix)
# 0 1110111 -> 0 (end of int) and 119
3f77
EOF

mk_msg <<EOF
# C.5.1.  First Response
:status: 302
cache-control: private
date: Mon, 21 Oct 2013 20:13:21 GMT
location: https://www.example.com
EOF

mk_tbl <<EOF
[  1] (s =  63) location: https://www.example.com
[  2] (s =  65) date: Mon, 21 Oct 2013 20:13:21 GMT
      Table size: 128
EOF

mk_enc <<EOF
# C.5.1.  First Response
dynamic idx 8 str 302
dynamic idx 24 str private
dynamic idx 33 str Mon, 21 Oct 2013 20:13:21 GMT
dynamic idx 46 str https://www.example.com
flush

update 150
EOF

tst_decode --decoding-spec d70, --table-size 256
tst_encode --table-size 256

_ -----------------------------------------------
_ Try the previous message with a table too small
_ -----------------------------------------------

mk_hex <<EOF
# C.5.1.  First Response
4803 3330 3258 0770 7269 7661 7465 611d | H.302X.privatea.
4d6f 6e2c 2032 3120 4f63 7420 3230 3133 | Mon, 21 Oct 2013
2032 303a 3133 3a32 3120 474d 546e 1768 |  20:13:21 GMTn.h
7474 7073 3a2f 2f77 7777 2e65 7861 6d70 | ttps://www.examp
6c65 2e63 6f6d                          | le.com
EOF

mk_tbl </dev/null

tst_decode --table-size 60

_ ----------------------------------------
_ Use the indexed name of an evicted field
_ ----------------------------------------

mk_hex <<EOF
4004 6e61 6d65 0576 616c 7565 7e06 7570 | @.name.value~.up
6461 7465                               | date
EOF

mk_tbl <<EOF
[  1] (s =  42) name: update
      Table size:  42
EOF

mk_enc <<EOF
dynamic str name str value
dynamic idx 62 str update
EOF

tst_encode --table-size 42

_ -------------------------------------------------------------
_ Use the indexed name of an evicted field in a non-empty table
_ -------------------------------------------------------------

mk_hex <<EOF
4004 6e61 6d65 0576 616c 7565 4005 6f74 | @.name.value@.ot
6865 7205 656e 7472 797f 0006 7570 6461 | her.entry...upda
7465                                    | te
EOF

mk_tbl <<EOF
[  1] (s =  42) name: update
[  2] (s =  42) other: entry
      Table size:  84
EOF

mk_enc <<EOF
dynamic str name str value
dynamic str other str entry
dynamic idx 63 str update
EOF

tst_encode --table-size 84

_ -------------------------
_ Enlarge the dynamic table
_ -------------------------

mk_hex </dev/null

mk_enc <<EOF
resize 9001
EOF

tst_encode
